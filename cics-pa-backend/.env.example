# ==============================================
# CICS PA Backend - Configuración
# ==============================================
# Copia este archivo como .env y ajusta los valores

# ===== API Settings =====
APP_NAME=CICS PA Abends Monitor
APP_VERSION=1.0.0
API_PREFIX=/api/v1
DEBUG=False

# ===== Server Settings =====
HOST=0.0.0.0
PORT=8000

# ===== ODBC Settings =====
# DSN configurado en odbc.ini o odbcinst.ini
ODBC_DSN=DVM_DSN

# Credenciales (opcional, depende de la configuración ODBC)
ODBC_USER=
ODBC_PASSWORD=

# Timeouts (en segundos)
ODBC_CONNECTION_TIMEOUT=30
ODBC_QUERY_TIMEOUT=300

# ===== Database Pool Settings =====
POOL_SIZE=5
MAX_OVERFLOW=10
POOL_RECYCLE=3600

# ===== Logging Settings =====
LOG_LEVEL=INFO
LOG_FILE=logs/cics_pa_backend.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===== CICS PA Specific =====
# Región CICS por defecto (opcional)
DEFAULT_CICS_REGION=

# Nombre de la tabla de abends
ABEND_TABLE_NAME=CICS_ABENDS
